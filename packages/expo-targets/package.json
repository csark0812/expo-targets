{
  "name": "expo-targets",
  "version": "0.1.0",
  "description": "Expo config plugin for Apple targets and Android app extensions",
  "main": "build/src/index.js",
  "types": "build/src/index.d.ts",
  "exports": {
    ".": {
      "import": "./build/src/index.js",
      "require": "./build/src/index.js"
    },
    "./metro": {
      "import": "./metro/build/index.js",
      "require": "./metro/build/index.js"
    },
    "./plugin": {
      "import": "./plugin/build/index.js",
      "require": "./plugin/build/index.js",
      "types": "./plugin/build/index.d.ts"
    },
    "./app.plugin.js": {
      "import": "./app.plugin.js",
      "require": "./app.plugin.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "bun run build:main && bun run build:plugin && bun run build:metro",
    "build:main": "tsc",
    "build:plugin": "tsc --project plugin/tsconfig.build.json && bun run copy:templates",
    "build:metro": "tsc --project metro/tsconfig.build.json",
    "copy:templates": "mkdir -p plugin/build/ios/templates && cp plugin/src/ios/templates/*.swift plugin/build/ios/templates/",
    "clean": "rm -rf build plugin/build metro/build",
    "prepare": "bun run build",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "dependencies": {
    "@babel/parser": "^7.25.0",
    "@babel/traverse": "^7.25.0",
    "@babel/types": "^7.25.0",
    "@expo/config-plugins": "^8.0.0",
    "@expo/config-types": "^52.0.0",
    "@expo/plist": "^0.1.0",
    "@react-native/normalize-colors": "^0.79.2",
    "debug": "^4.3.4",
    "glob": "^10.4.2",
    "xcode": "3.0.1"
  },
  "devDependencies": {
    "expo-module-scripts": "^4.1.7",
    "typescript": "~5.3.3",
    "@react-native-community/cli": "^16.0.0"
  },
  "peerDependencies": {
    "expo": "*",
    "expo-constants": "*"
  },
  "keywords": [
    "expo",
    "expo-plugin",
    "ios",
    "widget",
    "app-clip",
    "imessage",
    "apple-targets"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/csark0812/expo-targets"
  },
  "author": "Christopher Sarkissian",
  "homepage": "https://github.com/csark0812/expo-targets#readme",
  "license": "MIT"
}
